<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="#E6F2F8">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.55"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logo_home_new"
        android:layout_marginTop="30dp"
        android:padding="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#5EA4CA"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_dialog_email"
            android:background="#78C8EE"
            android:padding="10dp"
            />

        <EditText
            android:id="@+id/emailtxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/custom_edittxt"
            android:elevation="5dp"
            android:hint="Email"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#78C8EE"
            android:padding="10dp"
            android:src="@android:drawable/ic_lock_idle_lock" />

        <EditText
            android:id="@+id/passwordtxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:background="@drawable/custom_edittxt"
            android:elevation="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#5EA4CA"
        android:text="Forgot Password?"
        android:layout_gravity="center"
        android:gravity="end|bottom"
        android:layout_marginTop="8dp"
        android:clickable="true"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@drawable/custom_icon"
        android:onClick="login"
        android:padding="8dp"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textColor="#30B2F0"
        android:text="OR"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="2dp">
        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/facebook"
            />
        <ImageView
            android:id="@+id/twitter_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            />
        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/google"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Don\'t have an account?"
            android:gravity="end"
            android:layout_marginEnd="5dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="start"
            android:onClick="register"
            android:text="Register"
            android:textAllCaps="true"
            android:textColor="#5EA4CA"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>